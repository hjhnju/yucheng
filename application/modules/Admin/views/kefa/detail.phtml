{%extends file='common/layout.phtml'%}
{%block name='content'%} 
    <script>
     	function refresh(){
     		var arr = new Array();     		     		    		
     		var tag  = "{%$info.tag%}";
            document.getElementById(tag).checked=true;   
         	if("save"=="{%$type%}"){
         		//window.location.href="/admin/kefa/detail?type=detail&id={%$info.id%}";
         		window.location.href="/admin/kefa/list";
         	}    	         		
        } 
    </script>
    
