                                <label for="age">年龄 <small>(填写数值，如：38)</small></label>
                                <div class="text">
                                    <input type="text" name="private[age]">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="marriage">是否已婚</label>
                                <select name="private[marriage]">
                                {%selection name='Loan_Type_YesNo'%}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="company_type">企业类型</label>
                                <select name="private[company_type]">
                                {%selection name='Loan_Type_SchoolType'%}
