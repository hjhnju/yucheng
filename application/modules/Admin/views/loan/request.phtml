                                <label for="level">保障方式</label>
                                {%checkboxes name='Loan_Type_SafeMode' tag='safes'%}
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="fresh" value="1"> 新手专项标
                                </label>
                            </div>
                            <div class="form-group">
										<legend><label for="content">借款详情<small></small></label>
										<input type ="text" name="content" class="form-control"></input>
										<textarea name="content"  id = "content" class="rte1" cols = "350" style="border:1px #bbb solid;]"></textarea>
                                		</legend>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="audit_info">审核信息</label>
                                <div class="text">
                                    <input type="text" name="audit_info" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- FORM FIELDS-->
